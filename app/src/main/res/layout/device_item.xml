<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_deviceItem_parent"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_deviceItem_deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textSize="18sp"
            tools:text="نام دستگاه" />

        <TextView
            android:id="@+id/txt_deviceItem_deviceTepe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textSize="18sp"
            tools:text="نوع دستگاه" />

        <TextView
            android:id="@+id/txt_deviceItem_deviceIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_deviceItem_deviceName"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:textSize="16sp"
            tools:text="192.168.1.1" />

        <ImageView
            android:id="@+id/img_deviceItem_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_deviceItem_deviceIp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_delete_forever_black_24dp" />

        <ImageView
            android:id="@+id/img_deviceItem_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_deviceItem_deviceIp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/img_deviceItem_delete"
            android:src="@drawable/ic_edit_black_24dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>